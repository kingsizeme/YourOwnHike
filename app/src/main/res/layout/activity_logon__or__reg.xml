<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="team10.cs442.project.com.Logon_Or_Reg"
    android:background="@drawable/blur_1"
    android:id="@+id/log_or_reg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Email"
        android:id="@+id/textView5"
        android:textSize="24dp"
        android:drawingCacheQuality="high"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView7"
        android:layout_alignEnd="@+id/textView6"
        android:typeface="monospace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Password"
        android:id="@+id/textView6"
        android:textSize="24dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:typeface="monospace" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/submit_logIn_info"
        android:background="@drawable/button_1"
        android:autoText="false"
        android:textSize="24dp"
        android:typeface="monospace"
        android:shadowColor="#040404"
        android:elevation="20dp"
        android:layout_above="@+id/submit_sign_up"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Username"
        android:id="@+id/textView7"
        android:textSize="24dp"
        android:drawingCacheQuality="high"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:typeface="monospace" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/username"
        android:layout_above="@+id/textView5"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/submit_sign_up"
        android:background="@drawable/button_1"
        android:autoText="false"
        android:textSize="24dp"
        android:typeface="monospace"
        android:elevation="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/submit_logIn_info"
        android:layout_marginBottom="58dp" />

</RelativeLayout>
