<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="team10.cs442.project.com.SharedLibs.Share_Input"
    android:background="@drawable/share_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Share Your Moment:"
        android:id="@+id/text_add_log"
        android:textStyle="bold"
        android:theme="@android:style/DeviceDefault.ButtonBar"
        android:transitionName="@string/abc_searchview_description_submit"
        android:typeface="monospace"
        android:textSize="28dp"
        android:textColor="#f1fff4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/share_input_text"
        android:layout_below="@+id/text_add_log"
        android:layout_alignStart="@+id/text_add_log"
        android:layout_alignEnd="@+id/text_add_log" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/button4"
        android:background="@drawable/button_3"
        android:onClick="insert_moment"
        android:textSize="48dp"
        android:typeface="monospace"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/scrollView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location :"
        android:id="@+id/add_log"
        android:textStyle="bold"
        android:theme="@android:style/DeviceDefault.ButtonBar"
        android:transitionName="@string/abc_searchview_description_submit"
        android:typeface="monospace"
        android:textSize="28dp"
        android:textColor="#f1fff4"
        android:layout_above="@+id/button4"
        android:layout_alignStart="@+id/share_input_text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/share_input_location"
        android:layout_alignTop="@+id/add_log"
        android:layout_toEndOf="@+id/add_log" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignTop="@+id/share_input_location"
        android:layout_alignEnd="@+id/share_input_text" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/selectedimage"
        android:layout_below="@+id/share_input_text"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Pic"
        android:id="@+id/ch_mypic"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignStart="@+id/add_log"
        android:background="@drawable/button_3"
        android:layout_below="@+id/add_log" />

</RelativeLayout>
